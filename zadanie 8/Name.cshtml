<html>
<head>
    <title></title>
    @{
        var name = Request["name"];
        if (name == null || name == "")
        {
            name = "Robert Paulson";
        }
    }
</head>
<body>
    <ul>
        @for (var i = 0; i < 10; i++)
        {
            <li>His name is @name</li>
        }
    </ul>
</body>
</html>
